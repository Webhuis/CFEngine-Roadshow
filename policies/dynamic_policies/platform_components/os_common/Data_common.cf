bundle agent Data_common {

methods:

  "Install Webhuis RootCA"            usebundle => webhuis_nl_rootca;
  "Set LDAP configuration"            usebundle => ldap_conf;
  "Set libnss LDAP configuration"     usebundle => libnss_ldap_conf;
  "Set pam LDAP configuration"        usebundle => pam_ldap_conf;
  "Set nsswitch configuration"        usebundle => nsswitch_conf;

}

bundle agent webhuis_nl_rootca {

files:

  "/etc/ssl/webhuis.nl-certs/cacert.pem"
         comment => "Install Webhuis rootCA",
           perms => mo("644","root"),
          create => "true",
       copy_from => u_rcp("${do_roadshow.master_dynamic}/packages/cacert.pem","${sys.policy_hub}"),
          action => u_immediate;

  "/etc/ldap.secret"
         comment => "ldap secret",
           perms => mo("600","root"),
       copy_from => u_rcp("${do_roadshow.master_dynamic}/packages/ldap.secret","${sys.policy_hub}"),
          action => u_immediate;

methods:

  "Get the ldap_conf tempate"         usebundle => get_template("ldap.conf.tmpl");

reports:

  "${this.bundle}: I am doing standardized ldap setup";

}

bundle agent ldap_conf {

files:

  "/etc/ldap/ldap.conf"
         comment => "Prepare ldap configuration",
           perms => mo("644","root"),
          create => "true",
          action => u_immediate,
   edit_template => "$(sys.workdir)/dynamic-inputs-local/templates/ldap.conf.tmpl";

  "/etc/ldap.secret"
         comment => "ldap secret",
           perms => mo("600","root"),
       copy_from => u_rcp("${do_roadshow.master_dynamic}/packages/ldap.secret","${sys.policy_hub}"),
          action => u_immediate;

methods:

  "Get the ldap_conf tempate"         usebundle => get_template("ldap.conf.tmpl");

reports:

  "${this.bundle}: I am doing standardized ldap setup";

}

