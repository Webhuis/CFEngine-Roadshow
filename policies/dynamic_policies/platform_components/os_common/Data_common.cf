bundle agent nsswitch_conf {

files:

  "/etc/nsswitch.conf"
         comment => "Prepare nsswitch configuration",
           perms => mo("644","root"),
          create => "true",
       edit_line => edit_nsswitch_conf,
          action => u_immediate;

reports:

  "${this.bundle}: I am doing standardized nsswitch setup";

}

bundle edit_line edit_nsswitch_conf {

delete_lines:

  ".*";

insert_lines:

"# Webhuis /etc/nsswitch.conf voor de roadshow
#
# Do not edit

passwd:         compat ldap
group:          compat ldap
shadow:         compat ldap
gshadow:        files ldap

hosts:          files mdns4_minimal [NOTFOUND=return] dns mdns4 ldap
networks:       files ldap

protocols:      db files
services:       db files
ethers:         db files
rpc:            db files

netgroup:       nis ldap
automount:      files ldap";

}
