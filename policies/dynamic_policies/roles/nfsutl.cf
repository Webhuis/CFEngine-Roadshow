bundle agent nfs {

vars:

  "pkg[nfs-kernel-server]"           string => "*";

methods:

  "any" usebundle => packages("nfs.pkg");

commands:

 restart_nfs_server::
  "/etc/init.d/nfs-kernel-server restart"
     handle => "restart_nfs_kernel_server",
    comment => "restarting nfs-kernel-server";

}
