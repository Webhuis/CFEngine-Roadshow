[%CFEngine any:: %]
#allow-axfr-ips=
allow-recursion=127.0.0.1,10.0.0.0/8
#allow-2136-from=10.0.0.0/8
config-dir=/etc/powerdns
default-soa-name=${sys.fqhost}
disable-axfr=no
launch=gmysql
local-address=${sys.ipv4}
gmysql-host=127.0.0.1
gmysql-user=pdns
gmysql-password=${pdns_server_comp.gmysql_password}
gmysql-dbname=pdns
loglevel=9
master=no
recursor=127.0.0.1:5300
slave=yes

