bundle agent tomcat {

vars:

  "pkg[nfs-common]"        string => "*";
  "pkg[openjdk-7-jre]"     string => "*";
  "pkg[tomcat7]"           string => "*";

methods:

  "any" usebundle => packages("tomcat.pkg");

commands:

 restart_tomcat::
  "/etc/init.d/tomcat7 restart"
     handle => "restart_tomcat",
    comment => "restarting tomcat";

}
