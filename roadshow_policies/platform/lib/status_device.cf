bundle agent status_device(device_parameter) {

classes:

  "stop_network_editing"     expression => regcmp( "bad", $(device_parameter) );

defaults:

  "device_status"                string => "good", if_match_regex => "$(device_parameter)";

methods:

 stop::
  "Stop IP processing" usebundle => "stop_ip";

reports:

  "$(this.bundle) device parameter: $(device_parameter)";
  "$(this.bundle) device status: $(device_status)";

}
