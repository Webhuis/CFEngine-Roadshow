[%CFEngine any:: %]
! Configuration File for keepalived

global_defs {
   notification_email {
     martin@webhuis.nl
   }
   notification_email_from ldap@$(sys.fqhost)
   smtp_server mailsw.webhuis.nl
   smtp_connect_timeout 30
}

vrrp_instance VI_1 {
    state MASTER
    interface eth1
    virtual_router_id 101
    priority $(keepalive.priority)
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    unicast_peer { 
        $(keepalive.pear)
    }
    virtual_ipaddress {
        $($(classify.organisation).ldap_vip)
    }
}

